# WPGen Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Provider Overrides (Optional)
# WPGEN_LLM_PROVIDER=openai
# WPGEN_OPENAI_MODEL=gpt-4-turbo
# WPGEN_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# GitHub Integration (Required scopes: repo, workflow)
GITHUB_TOKEN=your_github_token_here

# WordPress REST API Integration (Optional)
WP_SITE_URL=
WP_USERNAME=
WP_APP_PASSWORD=

# Deployment Configuration (Optional)
FTP_HOST=
FTP_USERNAME=
FTP_PASSWORD=
SSH_HOST=
SSH_USERNAME=
SSH_PRIVATE_KEY_PATH=~/.ssh/id_rsa

# Application Settings (Optional)
# VALIDATION_STRICT=false
# WPGEN_TIMEOUT_SEC=60
